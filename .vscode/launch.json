      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app_1.py"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ]
    },
    {
      "name": "App 2",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app_2.py"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ]
    },
  ],
  "compounds": [
    {
      "name": "Compound",
      "configurations": ["App 1", "App 2"]
    }
  ]
